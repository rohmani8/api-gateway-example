{{define "AuthService"}}
{
    "endpoint": "/api/auth/tokens",
    "method": "POST",
    "output_encoding": "json",
    "backend": [
    {
        "url_pattern": "/api/v1/auth/tokens",
        "encoding": "json",
        "sd": "static",
        "method": "POST",
        "disable_host_sanitize": true
    }
    ],
    "input_query_strings": []
},
{
    "endpoint": "/api/auth/tokens",
    "method": "PUT",
    "output_encoding": "json",
    "extra_config": { {{include "jwt_validator.tmpl"}} },
    "input_headers": [
        "Authorization",
        "Content-Type"
    ],
    "backend": [
        {
            "url_pattern": "/api/v1/auth/tokens",
            "encoding": "json",
            "sd": "static",
            "method": "PUT",
            "disable_host_sanitize": true
        }
    ],
    "input_query_strings": []
},
{
