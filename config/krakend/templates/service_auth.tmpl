        "Authorization",
        "Content-Type"
    ],
    "backend": [
        {
            "url_pattern": "/api/v1/windows/user/{JWT.AD_User_ID}",
            "encoding": "json",
            "sd": "static",
            "method": "GET",
            "disable_host_sanitize": true
        }
    ],
    "input_query_strings": []
},
{
    "endpoint": "/api/auth/setup",
    "method": "GET",
    "output_encoding": "json",
    "extra_config": { {{include "jwt_validator.tmpl"}} },
    "input_headers": [
        "Authorization",
        "Content-Type"
    ],
    "backend": [
        {
            "url_pattern": "/api/v1/auth/language",
            "encoding": "json",
            "sd": "static",
            "method": "GET",
            "disable_host_sanitize": true
        },
        {
            "url_pattern": "/api/v1/auth/roles",
            "encoding": "json",
            "sd": "static",
            "method": "GET",
            "disable_host_sanitize": true
        },
        {
            "url_pattern": "/api/v1/auth/organizations",
            "encoding": "json",
            "sd": "static",
            "method": "GET",
            "disable_host_sanitize": true
        },
        {
            "url_pattern": "/api/v1/auth/warehouses",
            "encoding": "json",
            "sd": "static",
            "method": "GET",
            "disable_host_sanitize": true
        }
    ],
    "input_query_strings": [
        "client",
        "role",
        "organization"
    ]
